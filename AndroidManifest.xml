<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="coffee.easy_control"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />
    
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:name="coffee.easy_control.MySender"
        android:icon="@drawable/easy_control"
        android:label="@string/app_name" >
        <activity
            android:name="coffee.easy_control.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name ="coffee.easy_control.SteeringWheelActivity"
            android:icon="@drawable/steering_wheel"
            android:label="@string/steeringWheel" >
        </activity>
        <activity
            android:name ="coffee.easy_control.MouseActivity"
            android:icon="@drawable/mouse"
            android:label="@string/mouse" >
        </activity>
        <activity
            android:name ="coffee.easy_control.KeySettingActivity"
            android:icon="@drawable/steering_wheel"
            android:label="@string/selectKey" >
        </activity>
        <activity
            android:name ="coffee.easy_control.PPTControlActivity"
            android:icon="@drawable/ppt_control"
            android:label="@string/PPTControl" >
        </activity>
    </application>
</manifest>